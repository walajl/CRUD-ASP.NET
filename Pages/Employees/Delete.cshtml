@page "{id:int?}"
@model GestionEmployees.Pages.Employees.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid min-vh-90 d-flex flex-column justify-content-center">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h1 class="h2 mb-0">
                        <i class="bi bi-trash3-fill me-2"></i>Delete Employee
                    </h1>
                </div>
                <div class="card-body p-4">
                    <h5 class="text-center text-danger mb-4">
                        Are you sure you want to delete this employee?
                    </h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">
                            <i class="bi bi-person me-1"></i>Full Name
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Employee.FullName)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            <i class="bi bi-calendar me-1"></i>Hire Date
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Employee.HireDate)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            <i class="bi bi-building me-1"></i>Department
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Employee.Department)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            <i class="bi bi-currency-dollar me-1"></i>Salary (DT)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Employee.Salary)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            <i class="bi bi-envelope me-1"></i>Email
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Employee.Email)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-light text-center">
                    <form method="post" class="d-inline">
                        <input type="hidden" asp-for="Employee.Id" />
                        <button type="submit" class="btn btn-danger px-4 me-2">
                            <i class="bi bi-trash3 me-1"></i>Delete
                        </button>
                    </form>
                    <a asp-page="./Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
