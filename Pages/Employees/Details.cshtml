@page "{id:int?}"
@model GestionEmployees.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<div class="container-fluid min-vh-90 d-flex flex-column justify-content-center">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h1 class="h2 mb-0 text-center">
                        <i class="bi bi-person-lines-fill me-2"></i>Employee Details
                    </h1>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">
                            <i class="bi bi-person me-1"></i>Full Name
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Employee.FullName)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            <i class="bi bi-calendar me-1"></i>Hire Date
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Employee.HireDate)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            <i class="bi bi-building me-1"></i>Department
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Employee.Department)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            <i class="bi bi-currency-dollar me-1"></i>Salary (DT)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Employee.Salary)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            <i class="bi bi-envelope me-1"></i>Email
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Employee.Email)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-light text-center">
                    <a asp-page="./Edit" asp-route-id="@Model.Employee.Id" class="btn btn-warning px-4 me-2">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    <a asp-page="./Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>