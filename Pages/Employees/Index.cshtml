@page
@model GestionEmployees.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Employees";
}

<h1 class="text-center font-monospace">Employees</h1>

<p>
    <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New</a>
</p>
<div class="card mb-4 shadow-sm bg-light">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-center">
            <div class="col-md-4">
                <select asp-for="SelectedDepartment" asp-items="Model.Departments"
                        class="form-select">
                    <option value="">All Departments</option>
                </select>
            </div>
            <div class="col-md-6">
                    <input type="text" asp-for="SearchString" class="form-control" placeholder="Full Name">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel"></i> Filter
                </button>
            </div>
        </form>
    </div>
</div>

<div>
<table class="table table-striped table-hover bg-light shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].HireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm"><i class="bi bi-eye"></i> Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


