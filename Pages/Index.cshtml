@page
@model GestionEmployees.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4 px-3 px-md-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Welcome to the Employee Management System</h1>
        <p class="lead text-muted">Streamline your employee records and manage your team effectively</p>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4 text-center">

        <div class="col-md-4 mb-4">
            <div class="border rounded p-4 bg-light shadow-sm h-100">
                <i class="bi bi-people-fill display-4 text-primary mb-3"></i>
                <h5>Total Employees</h5>
                <p class="display-6 fw-semibold">@Model.TotalEmployees</p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="border rounded p-4 bg-light shadow-sm h-100">
                <i class="bi bi-person-plus-fill display-4 text-success mb-3"></i>
                <h5>Last Added</h5>
                @if (Model.LastAdded != null)
                {
                    <p class="mb-0"><strong>Full Name:</strong> @Model.LastAdded.FullName</p>
                }
                else
                {
                    <p class="text-muted">No employees yet.</p>
                }
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="border rounded p-4 bg-light shadow-sm h-100">
                <i class="bi bi-calendar-event display-4 text-info mb-3"></i>
                <h5>Today</h5>
                <p class="fs-5">@DateTime.Now.ToString("dddd, dd MMMM yyyy", System.Globalization.CultureInfo.InvariantCulture)</p>
            </div>
        </div>

    </div>
</div>